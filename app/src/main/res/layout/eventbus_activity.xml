<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="EventBusViewModel"
            type="com.seekting.kotlindemo.EventBusViewModel"/>
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >


        <Button
            android:id="@+id/register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="@{EventBusViewModel.onClickRegister}"/>

        <Button
            android:id="@+id/send"
            android:layout_width="wrap_content"
            android:onClick="@{EventBusViewModel.onClickSend}"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/unregister"
            android:onClick="@{EventBusViewModel.onClickUnregister}"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />


    </LinearLayout>
</layout>
